<Window x:Class="Server_chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server_chat"
        mc:Ignorable="d"
        Title="Server Chat" Height="480" Width="700"
        Background="White">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Group List -->
        <Border Grid.Column="0" Margin="10" Background="#f0f8ff" Padding="10" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Groups" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                <ListBox x:Name="GroupList" SelectionChanged="GroupList_SelectionChanged" Background="White" BorderBrush="#cce6ff"/>
                <Separator Margin="0,10"/>
                <TextBlock Text="Users" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                <ListBox x:Name="UserList" Background="White" BorderBrush="#cce6ff"/>
            </StackPanel>
        </Border>

        <!-- Chat Panel -->
        <StackPanel Grid.Column="1" Margin="10" Background="White">
            <TextBlock Text="Chat Log" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <ScrollViewer Height="350" VerticalScrollBarVisibility="Auto" Background="#e6f5ff" Padding="10" BorderBrush="#b3e0ff" BorderThickness="1">
                <TextBox x:Name="ChatLog" 
                         IsReadOnly="True"
                         Background="#e6f5ff"
                         BorderThickness="0"
                         FontSize="14"
                         Foreground="Black"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Bottom">
                <TextBox x:Name="ServerMessageBox"
                         Width="308"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,10,0"
                         BorderBrush="#3399ff"/>
                <Button Content="Send as Server"
                        Width="140"
                        Height="30"
                        Background="#3399ff"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#007acc"
                        Click="SendAsServer_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
